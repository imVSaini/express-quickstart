{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "ci",
        "chore",
        "deps",
        "docs",
        "feat",
        "fix",
        "perf",
        "config",
        "refactor",
        "revert",
        "style",
        "build",
        "test"
      ]
    ],
    "scope-case": [2, "always", "kebab-case"],
    "subject-case": [2, "always", "lower-case"],
    "scope-max-length": [2, "always", 20],
    "subject-min-length": [2, "always", 10],
    "subject-max-length": [2, "always", 72]
  }
}
